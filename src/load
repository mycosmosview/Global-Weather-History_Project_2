import psycopg2

def load_to_db(record):
    """
    Παίρνει ένα dictionary (record)
    και το εισάγει στον πίνακα weather_readings
    """

    conn = psycopg2.connect(
        host="postgres",
        database="weather_readings",
        user="weather_user",
        password="weather_pass"
    )

    cur = conn.cursor()

    insert_query = """
        INSERT INTO weather_readings
        (city, temperature, weather_description, pm10, pm2_5, recorded_at)
        VALUES (%s, %s, %s, %s, %s, %s)
    """

    cur.execute(
        insert_query,
        (
            record["City"],
            record["Temperature_°C"],
            record["Weather Description"],
            record["Air Quality - pm10"],
            record["Air Quality - pm2_5"],
            record["recorded_at"]
        )
    )

    conn.commit()
    cur.close()
    conn.close()